{
    "manifest_version": 3,
    "name": "Note Timer",
    "version": "1.0",
    "description": "Take and save notes from text as well as timer to remind your task",
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "action": {
      "default_icon": "icon.png",
      "default_title": "Note Timer",
      "default_popup": "popup/popup.html"
    },
    "permissions": ["storage", "alarms", "notifications", "contextMenus"],
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "options/options.html"
  }
  